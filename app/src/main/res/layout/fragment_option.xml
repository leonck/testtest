<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <include
        layout="@layout/fragment_option_head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/fragment_option_head_data_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headView" />
    <include
        layout="@layout/fragment_option_right_shiw_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/headDataView" />

      <include
        layout="@layout/fragment_option_right_waypoint_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/right_show" />

    <include
        layout="@layout/fragment_option_left_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headDataView" />

    <include
        layout="@layout/hubsan_501_five_mode_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"></LinearLayout>
    <LinearLayout
        android:id="@+id/option_one"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clean"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="clean" />

        <Button
            android:id="@+id/useJoystick"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="joystick" />

        <Button
            android:id="@+id/certification"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="certification" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mygrey">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="距离/速度："
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="水平高度："
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/airhight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="飞机经纬度："
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lanlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"

                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="当前位置经纬度："
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mylanlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"

                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="电量："
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"

                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/mygrey"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <LinearLayout
            android:id="@+id/hubsanRockerLay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginRight="40dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hubsanRockerThrottle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:minWidth="100px"
                android:paddingTop="2dp"
                android:text="T: 0%"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hubsanRockerRudder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:minWidth="100px"
                android:paddingTop="2dp"
                android:text="R: 0%"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hubsanRockerElevator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:minWidth="100px"
                android:paddingTop="2dp"
                android:text="E: 0%"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hubsanRockerAileron"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:minWidth="100px"
                android:paddingTop="2dp"
                android:text="A: 0%"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/leftIsUnLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:gravity="center"
        android:src="@drawable/hubsan_left_rocker_lock_model_normal" />

    <Button
        android:id="@+id/follow"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:text="跟随" />

    <Button
        android:id="@+id/around"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:text="环绕" />-->
</RelativeLayout>