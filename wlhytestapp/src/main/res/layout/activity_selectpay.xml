<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_15"
        android:text="支付金额（元）"
        android:textColor="@color/huise"
        android:textSize="@dimen/fontsize_14sp" />

    <EditText
        android:id="@+id/number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_12"
        android:layout_marginTop="@dimen/space_12"
        android:background="@null"
        android:gravity="center"
        android:hint="请询问快递员后输入"
        android:inputType="numberDecimal"
        android:textColorHint="@color/qianhuise"
        android:textSize="@dimen/fontsize_16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/beijing"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_20"
        android:text="选择支付方式"
        android:textColor="@color/huise"
        android:textSize="@dimen/fontsize_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_12"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginTop="@dimen/space_12"
            android:src="@drawable/month_pay" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_weight="1"
            android:text="电子卡支付"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_20"
            android:src="@drawable/check_payment" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/qianhuise" />

    <Button
        android:id="@+id/ok_pay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="@dimen/space_30"
        android:background="@drawable/button_lan"
        android:focusable="false"
        android:text="确认支付"
        android:textColor="@color/mywhite"
        android:textSize="@dimen/fontsize_16sp" />

</LinearLayout>