<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/brownborder"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dip"
            android:text="温馨提示"
            android:paddingBottom="@dimen/space_10"
            android:textSize="@dimen/fontsize_16sp"
            android:visibility="visible" />

        <View
            android:background="@color/qianhuise"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/message"
            android:layout_marginTop="@dimen/space_20"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:text="你填写的包裹信息还未保存，是否切换寄件方式？"
            android:layout_marginBottom="@dimen/space_20"
            android:textColor="#666565"
            android:textSize="@dimen/fontsize_14sp" />

        <!--  <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:background="@drawable/bord_paydialog" >

             <EditText
                 android:id="@+id/password"
                 android:layout_width="fill_parent"
                 android:layout_height="40dp"
                 android:background="@null"
                 android:hint="交易密码"
                 android:inputType="textPassword"
                 android:paddingLeft="10dp"
                 android:textSize="@dimen/fontsize_16px" />
         </LinearLayout> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_gravity="bottom|center"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_margin="0.5dp"
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_left_tv"
                android:gravity="center"
                android:text="点错了"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="59dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_right_tv"
                android:gravity="center"
                android:text="是的，切换"
                android:textColor="@color/mywhite"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>