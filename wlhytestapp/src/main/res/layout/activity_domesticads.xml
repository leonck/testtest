<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/huise"
                    android:textSize="@dimen/fontsize_14sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/huise"
                    android:textSize="@dimen/fontsize_14sp" />

                <EditText
                    android:id="@+id/user_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择或输入"
                    android:singleLine="true"
                    android:textColorHint="@color/qianhuise"
                    android:textSize="@dimen/fontsize_14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginRight="90dp"
                android:background="@color/qianhuise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textColor="@color/huise"
                    android:textSize="@dimen/fontsize_14sp" />

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择或输入"
                    android:singleLine="true"
                    android:textColorHint="@color/qianhuise"
                    android:textSize="@dimen/fontsize_14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingRight="@dimen/space_20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="选联系人"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_14sp" />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/qianhuise" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在区域"
            android:textColor="@color/huise"
            android:textSize="@dimen/fontsize_14sp" />

        <EditText
            android:id="@+id/ads_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:hint="请选择省市区"
            android:singleLine="true"
            android:textColorHint="@color/qianhuise"
            android:textSize="@dimen/fontsize_14sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_20"
            android:visibility="gone"
            android:src="@drawable/address_location" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/qianhuise" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="@color/huise"
            android:textSize="@dimen/fontsize_14sp" />

        <EditText
            android:id="@+id/details_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请详细到门牌号"
            android:singleLine="true"
            android:textColorHint="@color/qianhuise"
            android:textSize="@dimen/fontsize_14sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/qianhuise" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/save_bt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="@dimen/space_30"
            android:background="@color/blue"
            android:text="保存"
            android:textColor="@color/mywhite"
            android:textSize="@dimen/fontsize_16sp" />
    </RelativeLayout>


</LinearLayout>