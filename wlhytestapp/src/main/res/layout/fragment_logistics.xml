<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_60"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.quark.wanlihuanyunuser.ui.widget.ListViewForScrollView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.quark.wanlihuanyunuser.ui.widget.ListViewForScrollView>

            <LinearLayout
                android:id="@+id/add_ly"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/xlv"
                android:layout_marginBottom="@dimen/space_15"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_15"
                android:background="@color/beijing"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/add_1"
                    android:drawablePadding="@dimen/space_8"
                    android:text="添加包裹"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/fontsize_14sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/qianhuise" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费："
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_14sp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/red"
                android:textSize="@dimen/fontsize_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅供参考"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selected_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/agree_o"
                android:drawablePadding="@dimen/space_8"
                android:text="我同意"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_14sp" />

            <TextView
                android:id="@+id/terms_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《快递条款》"
                android:textColor="@color/blue"
                android:textSize="@dimen/fontsize_14sp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/sumbit_tv"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/blue"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/mywhite"
        android:textSize="@dimen/fontsize_14sp" />


</RelativeLayout>