        <LinearLayout
            android:id="@+id/two_ly"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/two_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="运送中"
                android:textColor="@color/blue"
                android:textSize="@dimen/fontsize_14sp" />

            <ImageView
                android:id="@+id/two_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6"
                android:src="@drawable/active_tab"
              />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_ly"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/three_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="已送达"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_14sp" />

            <ImageView
                android:id="@+id/three_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6"
                android:src="@drawable/active_tab"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_ly"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/four_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已失效"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_14sp" />

            <ImageView
                android:id="@+id/four_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6"
                android:src="@drawable/active_tab"
                android:visibility="invisible" />
        </LinearLayout>
